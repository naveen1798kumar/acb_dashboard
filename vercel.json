{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PORT": "5000",
    "NODE_ENV": "production",
    "MONGO_URI": "your_mongodb_connection_string_here",
    "JWT_SECRET": "your_jwt_secret_key_here"
  }
}
